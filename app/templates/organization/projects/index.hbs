<div class="row">
  <div class="col">
    <h3 class="mb-0">
      Projects
      {{#link-to "organization.projects.create" class="btn btn-outline-primary btn-sm float-right"}}
        {{entypo-icon "add-to-list"}} New Project
      {{/link-to}}
    </h3>
  </div>
</div>

{{#paginate-models
  models=model
  routeName='organization.projects.index'
  totalCount=totalCount
  hasNextPage=hasNextPage
  hasPrevPage=hasPrevPage
  endCursor=endCursor
  first=first
  after=after
  ascending=ascending
  sortBy=sortBy
  sortOptions=sortOptions
  as |model|
}}
  {{#link-to 'project.index' model.id class='list-group-item list-group-item-action flex-column align-items-start'}}
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">{{model.name}}</h5>
      <small>Modified {{moment-from-now model.updatedAt}}</small>
    </div>

    <small>{{model.id}}</small>
  {{/link-to}}

{{/paginate-models}}
