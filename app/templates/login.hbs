<div class="container mt-5">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="jumbotron">
        <small class="float-right text-muted">
          {{#link-to 'signup'}}Need an account?{{/link-to}}<br>
          {{#link-to 'reset'}}Forgot password?{{/link-to}}
        </small>
        <h3>Sign In</h3>
        <hr class="m-y-1">
        <form {{action 'authenticate' on='submit'}}>
          <div class="form-group">
            <label for="username">Email Address</label>
            {{input id='username' class='form-control' type='email' value=username autofocus=true}}
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            {{input id='password' class='form-control' type='password' value=password}}
          </div>
          {{#if errorMessage}}
            <div class="alert-danger alert m-b-1" role="alert"><strong>Oh Snap!</strong><br> {{errorMessage}}</div>
          {{/if}}
          <button type="submit" class="btn btn-primary btn-block">Sign In</button>
        </form>
      </div>
    </div>
  </div>
</div>
