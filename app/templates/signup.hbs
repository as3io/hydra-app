<div class="container mt-5">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="jumbotron">
        <small class="float-right text-muted">{{#link-to "login"}}Already have an account?{{/link-to}}</small>
        <h3>Sign Up</h3>
        <hr class="m-y-1">
        <form {{action "signup" on="submit"}}>
          <div class="form-group row">
            <div class="col">
              <label for="givenName">First Name</label>
              {{input id="givenName" class="form-control" type="text" value=givenName autofocus=true required=true}}
            </div>
            <div class="col">
              <label for="familyName">Last Name</label>
              {{input id="familyName" class="form-control" type="text" value=familyName required=true}}
            </div>
          </div>
          <div class="form-group">
            <label for="email">Email Address</label>
            {{input id="email" class="form-control" type="email" value=email required=true}}
          </div>
          {{!-- <div class="form-group">
            <label for="password">Password</label>
            {{input id="password" class="form-control" type="password" value=password}}
          </div> --}}
          {{#if errorMessage}}
            <div class="alert-danger alert m-b-1" role="alert"><strong>Oh Snap!</strong> {{errorMessage}}</div>
          {{/if}}
          <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
        </form>
      </div>
    </div>
  </div>
</div>
