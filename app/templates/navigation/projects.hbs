{{#if session.isAuthenticated}}
  <li class="nav-item dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownTenant" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      {{#if user.project}}
        {{user.project.name}}
      {{else}}
        Select project
      {{/if}}
    </a>
    <div class="dropdown-menu" aria-labelledby="navbarDropdownTenant">

      {{#each user.projects as |project|}}
        {{#link-to 'project.index' project.id class="dropdown-item" title="Switch to {{project.name}}"}}
          {{project.name}}
        {{/link-to}}
      {{/each}}

      <div class="dropdown-divider"></div>
      <div class="dropdown-item">
        {{#link-to "organization.projects.create" user.organization.id class="btn btn-block btn-sm btn-primary"}}
          {{entypo-icon "plus"}}
          Create Project
        {{/link-to}}
      </div>
    </div>
  </li>
{{/if}}
